<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileResponsiveApp.Views.GalleryView"
             Title="Gallery">
    <VerticalStackLayout>
        <Label 
        Text="Welcome to the Photo Gallery!"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <CollectionView
        ItemsSource="{Binding Items}"
        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" 
                       Padding="10" 
                       HasShadow="True" 
                       Margin="5">
                        <Grid ColumnDefinitions="Auto, *" 
                          RowDefinitions="Auto, Auto">
                            <Image 
                               Margin="5">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>
                                        
                                        <VisualState x:Name="Mobile">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="200" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Property="Source" Value="{Binding ImageUrl, StringFormat='{0}_small.jpg'}"/>
                                            </VisualState.Setters>
                                        </VisualState>

                                        <VisualState x:Name="Tablet">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="450" />
                                            </VisualState.StateTriggers>
                                            
                                            <VisualState.Setters>
                                                <Setter Property="Source" Value="{Binding ImageUrl, StringFormat='{0}_medium.jpg'}"/>
                                            </VisualState.Setters>
                                        </VisualState>


                                        <VisualState x:Name="Desktop">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="1400" />
                                            </VisualState.StateTriggers>

                                            <VisualState.Setters>
                                                <Setter Property="Source" Value="{Binding ImageUrl, StringFormat='{0}_large.jpg'}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Image>

                            <Label Text="{Binding Name}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               Grid.Column="1" 
                               VerticalOptions="Start"/>

                            <Label Text="{Binding Description}" 
                               FontSize="14" 
                               Grid.Column="1" Grid.Row="1" 
                               VerticalOptions="Start"
                               LineBreakMode="TailTruncation"/>

                            <Label Text="{Binding Price}" 
                               FontSize="16"
                               FontAttributes="Bold" 
                               TextColor="Green"
                               Grid.Column="1" Grid.Row="1" 
                               HorizontalOptions="End"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>
</ContentPage>